<main class="MenuPage">
  <p>clink the link to view
    <%= link_to "List Of Menus", list_of_menus_path%>
  </p>

  <h1 class="MenuPage-title"> List of menus </h1>
  <section class="MenuPage-items">
    <ul>
      <% Menu.all.order(:id).each do |menu|%>
        <li class="Menu-type">
          <h2 class="Menu-id"> <%= menu.id%>.
          <%= submit_tag  menu.name,class: "Menu-name",onclick: "location.href='/menus/#{menu.id}'" %></h2>
          <%= submit_tag "edit", class: "Menu-edit" ,onclick:"location.href='/menus/#{menu.id}/edit'"%>
          <%= form_with(url: "/menus/#{menu.id}", method: "DELETE") do %>
            <%= image_submit_tag "/trashcan.svg", class: "MenuItem-delete" %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </section>

  <p>click the link to
    <%= link_to "Add a Menu", add_menu_path%>
  </p>

  <p>click the link to
    <%= link_to "Change Standard Menu", change_of_standard_menu_path%>
  </p>

 </main>
