<section class="Cart">
  <li class="Order-User">
    <p class="Order-bold">
      User name:
    </p>
    <p class="Order-name">
      <%= Order.find(@id).user.first_name %>
    </p>
    <p class="Order-bold">
      Order number:
    </p>
    <p class="Order-name">
      <%= @id %>
    </p>
  </li>
  <table class="Table">
    <tr class="Table-row">
      <th class="MenuItem-nameHead"> Item name </th>
      <th class="MenuItem-priceHead"> Price</th>
      <th class="MenuItem-quantityHead">Quantity</th>
    </tr>
    <% @order_items.each do |order_item| %>
      <li class="Menu-item">
        <tr>
          <td class="MenuItem-name"> <%= order_item.menu_item_name %> </td>
          <td class="MenuItem-price"> <%= order_item.menu_item_price %> </td>
          <td class="MenuItem-quantity"> <%= order_item.menu_item_quantity %> </td>
        </tr>
      </li>
    <% end %>
  </table>
  <p class="Cart-total">  Total Order value:  <%= Order.find(@id).value%> <p>
</section>
