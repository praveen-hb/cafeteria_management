<section class="Menu-details">
  <h1 class="current-details"> current details: <h1>
  <h2 class="Current-text"> id: <%= @id %> </h2>
  <h2 class="Current-text"> name: <%= Menu.find(@id).name %> </h2>
</section>

<section class="Edit-details">
  <h1 class="edit-details "> Edit details: </h1>
  <%= form_with(url: "/menus/#{@id}/update", method: "post",class: "Editing") do %>
    <%= text_field_tag "name",Menu.find(@id).name,class: "Edit-menuName",placeholder: "new menu name"%>
    <%= hidden_field_tag "id", @id%>
    <%= submit_tag "update", class: "Submit-Button"%>
  <% end %>
</section>
 <%= submit_tag "Go Back", class: "Back" ,onclick:"location.href='/menus'"%>
